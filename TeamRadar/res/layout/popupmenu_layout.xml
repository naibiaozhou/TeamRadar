<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="100dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@drawable/transparent"
    android:gravity="bottom" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        
        android:orientation="vertical" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/shape_background_assistivetouch"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/btnHome"
                    style="@style/Icon"
                    android:drawableTop="@drawable/radar_icon"
                    android:text="主界面" />
                
                <TextView
                    android:id="@+id/btnActivity"
                    style="@style/Icon"
                    android:drawableTop="@drawable/activity_icon"
                    android:text="活动" />

                
                <TextView
                    android:id="@+id/btnContact"
                    style="@style/Icon"
                    android:drawableTop="@drawable/contact_icon"
                    android:text="好友" />     
                    
                <TextView
                    android:id="@+id/btnInvite"
                    style="@style/Icon"
                    android:drawableTop="@drawable/invite_icon"
                    android:text="邀请好友" />   
                    
                
                <TextView
                    android:id="@+id/btnJoinin"
                    style="@style/Icon"
                    android:drawableTop="@drawable/joinin_icon"
                    android:text="加入活动" />   

                <TextView
                    android:id="@+id/btnProfile"
                    style="@style/Icon"
                    android:drawableTop="@drawable/profile_icon"
                    android:text="个人资料" />                   
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</RelativeLayout> 
